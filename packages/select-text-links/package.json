{
  "name": "@hyperlink-experiments/select-text-links",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/background.js",
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "manifest": {
      "command": "mkdir -p dist && cp manifest.json dist/",
      "files": [
        "manifest.json"
      ],
      "output": [
        "dist/manifest.json"
      ],
      "clean": "if-file-deleted"
    },
    "icons": {
      "command": "mkdir -p dist/icons && cp -R icons/* dist/icons/",
      "files": [
        "icons/*.png"
      ],
      "output": [
        "dist/icons/**"
      ],
      "clean": "if-file-deleted"
    },
    "build": {
      "command": "esbuild src/background.ts src/content.ts --bundle --platform=browser --outdir=dist --format=esm",
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "dist/background.js",
        "dist/content.js"
      ],
      "dependencies": [
        "manifest",
        "icons"
      ]
    }
  },
  "devDependencies": {
    "@types/chrome": "^0.0.208"
  }
}
