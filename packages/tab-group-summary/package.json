{
  "name": "@hyperlink-experiments/tab-group-summary",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "wireit",
    "zip": "wireit"
  },
  "wireit": {
    "manifest": {
      "command": "mkdir -p dist && cp manifest.json dist/",
      "files": [
        "manifest.json"
      ],
      "output": [
        "dist/manifest.json"
      ],
      "clean": "if-file-deleted"
    },
    "html": {
      "command": "mkdir -p dist && cp options.html dist/",
      "files": [
        "options.html"
      ],
      "output": [
        "dist/options.html"
      ],
      "clean": "if-file-deleted"
    },
    "icons": {
      "command": "mkdir -p dist/icons && cp -R icons/* dist/icons/",
      "files": [
        "icons/*.png"
      ],
      "output": [
        "dist/icons/**"
      ],
      "clean": "if-file-deleted"
    },
    "zip": {
      "command": "cd dist && zip -r ../merge.zip .",
      "files": [
        "dist/**"
      ],
      "output": [
        "merge.zip"
      ],
      "dependencies": [
        "build"
      ],
      "clean": "if-file-deleted"
    },
    "build": {
      "command": "esbuild src/index.ts src/content.ts src/summary.ts src/offscreen.ts src/options.ts --bundle --platform=browser --outdir=dist --format=esm",
      "files": [
        "src/**/*.ts",
        "src/**/*.js",
        "manifest.json"
      ],
      "dependencies": [
        "icons",
        "html",
        "manifest",
        "../shared:build"
      ],
      "output": [
        "dist"
      ]
    }
  },
  "dependencies": {
    "@google/genai": "^1.10.0",
    "@types/chrome": "^0.1.1",
    "@types/marked": "^5.0.2",
    "linkedom": "^0.18.11",
    "marked": "^16.1.0",
    "turndown": "^7.2.0"
  }
}
