{
  "name": "Trails",
  "version": "0.0.2",
  "manifest_version": 3,
  "description": "Create links between content on any web page and any other and have them persist.",
  "permissions": ["storage", "contextMenus", "commands"],
  "optional_permissions": ["history", "tabs", "bookmarks"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "commands": {
    "create-link": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Creates a link on the current page."
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Trails",
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
