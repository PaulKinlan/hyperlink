{
  "name": "@hyperlink-experiments/memex-join",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "wireit",
    "zip": "wireit"
  },
  "wireit": {
    "manifest": {
      "command": "mkdir -p dist && cp manifest.json dist/",
      "files": [
        "manifest.json"
      ],
      "output": [
        "dist/manifest.json"
      ],
      "clean": true
    },
    "html": {
      "command": "mkdir -p dist && cp create-link.html popup.html ui.css dist/",
      "files": [
        "create-link.html",
        "popup.html",
        "ui.css"
      ],
      "output": [
        "dist/create-link.html",
        "dist/popup.html",
        "dist/ui.css"
      ],
      "clean": true
    },
    "icons": {
      "command": "mkdir -p dist/icons && cp -R icons/* dist/icons/",
      "files": [
        "icons/*.png"
      ],
      "output": [
        "dist/icons/**"
      ],
      "clean": true
    },
    "zip": {
      "command": "cd dist && zip -r ../memex-join.zip .",
      "files": [
        "dist/**"
      ],
      "output": [
        "memex-join.zip"
      ],
      "dependencies": [
        "build"
      ],
      "clean": true
    },
    "build": {
      "command": "esbuild src/background.ts src/create-link.ts src/content.ts src/popup.ts --bundle --platform=browser --outdir=dist --format=esm",
      "files": [
        "src/**/*.ts",
        "manifest.json",
        "popup.html"
      ],
      "output": [
        "dist"
      ],
      "dependencies": [
        "html",
        "icons",
        "manifest",
        "../shared:build"
      ],
      "clean": "if-file-deleted"
    }
  },
  "dependencies": {
    "@hyperlink-experiments/shared": "1.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.208"
  }
}
