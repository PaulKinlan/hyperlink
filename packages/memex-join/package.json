{
  "name": "@hyperlink-experiments/memex-join",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "wireit",
    "zip": "wireit"
  },
  "wireit": {
    "manifest": {
      "command": "mkdir -p dist && cp src/manifest.json dist/",
      "files": [
        "src/manifest.json"
      ],
      "output": [
        "dist/manifest.json"
      ]
    },
    "html": {
      "command": "echo HELLO && mkdir -p dist && cp {src/create-link.html,src/popup.html,src/ui.css} dist/",
      "files": [
        "src/*.{html,css}"
      ],
      "output": [
        "dist/*.{html,css}"
      ]
    },
    "icons": {
      "command": "mkdir -p dist/icons && cp -R src/icons/* dist/icons/",
      "files": [
        "src/icons/*.png"
      ],
      "output": [
        "dist/icons/**"
      ]
    },
    "zip": {
      "command": "cd dist && zip -r ../memex-join.zip .",
      "files": [
        "dist/**"
      ],
      "output": [
        "memex-join.zip"
      ],
      "dependencies": [
        "build"
      ]
    },
    "build": {
      "command": "mkdir -p dist && esbuild src/background.ts src/create-link.ts src/content.ts src/popup.ts --bundle --platform=browser --outdir=dist --format=esm",
      "files": [
        "src/**/*.ts"
      ],
      "output": [
        "dist/*.js"
      ],
      "dependencies": [
        "html",
        "icons",
        "manifest",
        "../shared:build"
      ]
    }
  },
  "dependencies": {
    "@hyperlink-experiments/shared": "1.0.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.208"
  }
}
