{
  "manifest_version": 3,
  "name": "Merge Link",
  "version": "1.0.2",
  "description": "Merge the content of a link into your current page so that you can get a quick summary of the content before even visiting it.",
  "action": {
    "default_title": "Merge Link"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
