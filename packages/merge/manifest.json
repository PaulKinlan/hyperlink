{
  "manifest_version": 3,
  "name": "Merge",
  "version": "1.0.0",
  "description": "A Chrome extension for merging things.",
  "action": {
    "default_title": "Merge"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "scripting", "activeTab", "contextMenus"],
  "host_permissions": ["https://*/", "http://*/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
