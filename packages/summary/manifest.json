{
  "manifest_version": 3,
  "name": "Summary",
  "version": "1.0.0",
  "description": "A Chrome extension for summarizing links.",
  "action": {
    "default_title": "Summary"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_page": "options.html",
  "permissions": ["storage", "offscreen"],
  "host_permissions": ["https://*/", "http://*/"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
